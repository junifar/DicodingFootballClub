<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.rubahapi.footballclub">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".matchdetail.MatchDetailActivity"/>
        <activity
                android:name=".matchdetail.LastMatchDetailActivity"
                android:label="Detail Match"/>
        <activity
                android:name=".home.HomeActivity"
                android:label="@string/title_activity_home"/>
        <activity android:name=".favoritedetail.FavoriteDetailActivity"/>
        <activity android:name=".main.MainActivity">
        </activity>
        <activity android:name=".SearchTestActivity">

            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
    </application>

</manifest>